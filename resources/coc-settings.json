{
  "clangd.arguments": [
    "--background-index=true",
    "--cross-file-rename=true",
    "--completion-style=bundled",
    "--header-insertion=iwyu",
    "--header-insertion-decorators=0"
  ],
  "clangd.fallbackFlags": [
    "-I/usr/lib/llvm-18/include"
  ],
  "inlayHint.enable": false,
  "clangd.semanticHighlighting": true,
  "clangd.compilationDatabasePath": "",
  "clangd.checkUpdates": true,
  "clangd.disableDiagnostics": false,
  "suggest.noselect": false,
  "suggest.minTriggerInputLength": 2,
  "suggest.fromRuntimepath": true,
  "suggest.localityBonus": true,
  "suggest.languageSources": {
    "clangd": true
  },
  "suggest.snippetsSupport": true,

  "diagnostic.virtualText": true,
  "diagnostic.virtualTextFormat": "%message",
  "diagnostic.messageTarget": "none",
  "diagnostic.floatEnable": false,
  "diagnostic.messageLimit": 1
}
